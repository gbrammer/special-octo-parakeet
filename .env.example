# Copy this file to .env and fill in your database credentials.
# .env is excluded from version control.

# Option 1 – single connection URL (takes precedence if set)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Option 2 – individual settings (used when DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=secret

# Flask secret key (used for session signing – change this in production)
SECRET_KEY=change-me
